generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String
  isVerified Boolean @default(false)
  createdAt DateTime
  updateAt DateTime
}

model OTP {
  id Int @id @default(autoincrement())
  OTP Int @unique
  createdAt DateTime
  expiredAt DateTime
}